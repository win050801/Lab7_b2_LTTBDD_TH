<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iditem"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/txtStt"
        android:layout_width="15dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDiadiem"
        android:layout_width="158dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:text="Da lat"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtStt"
        app:layout_constraintStart_toEndOf="@+id/txtStt"
        app:layout_constraintTop_toTopOf="@+id/txtStt"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiadiem"
        app:layout_constraintStart_toEndOf="@+id/txtDiadiem"
        app:layout_constraintTop_toTopOf="@+id/txtDiadiem"
        app:srcCompat="@drawable/h1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/h2" />
</androidx.constraintlayout.widget.ConstraintLayout>